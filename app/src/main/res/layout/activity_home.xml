<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/title_judul_awal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/judul_app"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/title_judul_awal_desc"
        android:layout_below="@id/title_judul_awal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="80dp"
        android:text="@string/judul_app_desc"
        android:textSize="22sp"
        android:padding="12dp"/>

    <Button
        android:id="@+id/btn_rekomendasi"
        android:layout_below="@+id/title_judul_awal_desc"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="Rekomendasikan \nLapangan"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:background="@drawable/button_background"
        android:textColor="@color/colorWhite"/>

    <Button
        android:id="@+id/btn_lihatLap"
        android:layout_width="180dp"
        android:layout_height="100dp"
        android:text="Lihat Semua \nLapangan"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_rekomendasi"
        android:background="@drawable/button_background"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="16dp"/>

    </RelativeLayout>

</ScrollView>